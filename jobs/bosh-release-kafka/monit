check process bosh_release_kafka
  with pidfile /var/vcap/sys/run/bosh_release_kafka/bosh_release_kafka.pid
  start program "/var/vcap/jobs/bosh_release_kafka/bin/monit_debugger bosh_release_kafka_ctl '/var/vcap/jobs/bosh_release_kafka/bin/bosh_release_kafka_ctl start'"
  stop program "/var/vcap/jobs/bosh_release_kafka/bin/monit_debugger bosh_release_kafka_ctl '/var/vcap/jobs/bosh_release_kafka/bin/bosh_release_kafka_ctl stop'"
  group vcap
