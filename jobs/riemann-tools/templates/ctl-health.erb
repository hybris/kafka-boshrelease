#!/bin/bash


RUN_DIR=/var/vcap/sys/run/riemann-tools
LOG_DIR=/var/vcap/sys/log/riemann-tools
JOB_DIR=/var/vcap/jobs/riemann-tools
HEALTH_PIDFILE=${RUN_DIR}/health_pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR


    cd /var/vcap/packages/riemann-tools/riemann-tools

    export PATH=/var/vcap/packages/ruby/bin:$PATH

    bundle exec riemann-health --host <%= properties.riemann.server %> --event-host <%= spec.index %>.<%= spec.job.name %>.<%= properties.riemann.suffix %> \
        >>  $LOG_DIR/riemann-health.stdout.log \
        >> $LOG_DIR/riemann-health.stderr.log &
    echo $! > $HEALTH_PIDFILE

    ;;

  stop)

    kill -9 `cat $HEALTH_PIDFILE`
    rm -f $HEALTH_PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
