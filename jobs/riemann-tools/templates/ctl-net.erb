#!/bin/bash


RUN_DIR=/var/vcap/sys/run/riemann-tools
LOG_DIR=/var/vcap/sys/log/riemann-tools
JOB_DIR=/var/vcap/jobs/riemann-tools
NET_PIDFILE=${RUN_DIR}/net_pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR


    cd /var/vcap/packages/riemann-tools/riemann-tools

    export PATH=/var/vcap/packages/ruby/bin:$PATH



    bundle exec riemann-net --host <%= properties.riemann.server %> --event-host <%= spec.index %>.<%= spec.job.name %>.<%= properties.riemann.suffix %> \
        >>  $LOG_DIR/riemann-net.stdout.log \
        >> $LOG_DIR/riemann-net.stderr.log &
    echo $! > $NET_PIDFILE
    ;;

  stop)

    kill -9 `cat $NET_PIDFILE`
    rm -f $NET_PIDFILE

    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
