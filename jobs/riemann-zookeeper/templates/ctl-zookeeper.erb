#!/bin/bash


RUN_DIR=/var/vcap/sys/run/riemann-zookeeper
LOG_DIR=/var/vcap/sys/log/riemann-zookeeper
JOB_DIR=/var/vcap/jobs/riemann-zookeeper
PIDFILE=${RUN_DIR}/zookeeper_pid

case $1 in

  start)
    mkdir -p $RUN_DIR $LOG_DIR
    chown -R vcap:vcap $RUN_DIR $LOG_DIR


    cd /var/vcap/packages/riemann-tools/riemann-tools

    export PATH=/var/vcap/packages/ruby/bin:$PATH

    bundle exec riemann-zookeeper --host <%= properties.riemann.server %> --event-host <%= spec.index %>.<%= spec.job.name %>.<%= properties.riemann.suffix %> \
        >>  $LOG_DIR/riemann-zookeeper.stdout.log \
        >> $LOG_DIR/riemann-zookeeper.stderr.log &
    echo $! > $PIDFILE

    ;;

  stop)

    kill -9 `cat $PIDFILE`
    rm -f $PIDFILE
    ;;

  *)
    echo "Usage: ctl {start|stop}" ;;

esac
